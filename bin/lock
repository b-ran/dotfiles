#!/usr/bin/zsh

# shellcheck disable=SC1090
source ~/.config/themes/colors

GREETER=$(fortune -n 90 -s | head -n 1)

## Exec	-----------------
# shellcheck disable=SC2154
(
  i3lock \
    --color="${bg}" \
    --insidever-color="${success}" \
    --insidewrong-color="${error}" \
    --inside-color="${bg}00" \
    --ringver-color="${success}" \
    --ringwrong-color="${error}" \
    --ring-color="${info}" \
    --line-color="${bg}" \
    --separator-color="${bg}" \
    --keyhl-color="${alt_fg}" \
    --bshl-color="${error}" \
    --verif-color="${bg}" \
    --wrong-color="${fg}" \
    --layout-color="${fg}" \
    --time-color="${fg}" \
    --date-color="${fg}" \
    --{time,date,layout,verif,wrong,greeter}-font="JetBrainsMono Nerd Font" \
    --{layout,verif,wrong,greeter}-size=18 \
    --time-size=34 \
    --date-size=18 \
    --greeter-text="${GREETER}" \
    --greeter-color="${fg}" \
    --verif-text="Verifying" \
    --wrong-text="Wrong Password" \
    --noinput-text="Empty" \
    --lock-text="Locking..." \
    --lockfailed-text="Failed to lock" \
    --radius 140 \
    --ring-width 10 \
    --screen 1 \
    --clock \
    --indicator \
    --nofork \
    --time-str="%I:%M:%S %p" \
    --date-str="%A, %b %d, %G" \
    -n
  xset s off -dpms
) &
xset dpms 0 0 15
