super + Return
	alacritty

super + d
	rofi -combi-modi "drun,Power Menu:~/dotfiles/scripts/menus/powermenu,window" -theme ~/.config/rofi/combo-modi.rasi -show combi -show-icons -combi-display-format \{text\} -display-combi "Run"

super + n
    networkmanager_dmenu

super + p
    ~/dotfiles/scripts/color-gpick

super + t
    thunar

super + l
    ~/dotfiles/scripts/lock

super + s
    maim -u -f png -s -b 2 -c 0.35,0.55,0.85,0.25 -l | xclip -selection clipboard -t image/png

Control + Shift + Escape
    xfce4-taskmanager

# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volume{ --up, --down, --toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
    brightness{ --up, --down}
